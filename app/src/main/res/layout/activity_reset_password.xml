<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:layout_marginTop="30dp">

    <TextView
        android:id="@+id/resetTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reset_pass"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- OTP input area: visible initially -->
    <EditText
        android:id="@+id/otpInput"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="@string/enter_otp"
        android:autofillHints="otp"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@id/resetTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        tools:ignore="VisualLintTextFieldSize" />

    <Button
        android:id="@+id/verifyOtpBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/verify_otp"
        app:layout_constraintTop_toBottomOf="@id/otpInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        tools:ignore="VisualLintButtonSize" />

    <!-- Reset form: hidden until OTP is verified -->
    <LinearLayout
        android:id="@+id/resetFormContainer"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/verifyOtpBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp">

        <EditText
            android:id="@+id/newPasswordInput"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="@string/new_pass"
            android:autofillHints="newPassword"
            android:inputType="textPassword"
            tools:ignore="VisualLintTextFieldSize" />

        <EditText
            android:id="@+id/confirmNewPasswordInput"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="@string/confirm_new_pass"
            android:autofillHints="password"
            android:inputType="textPassword"
            android:layout_marginTop="12dp"
            tools:ignore="VisualLintTextFieldSize" />

        <Button
            android:id="@+id/resetBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/reset_pass"
            android:layout_marginTop="16dp"
            tools:ignore="VisualLintButtonSize" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
