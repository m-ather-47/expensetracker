<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/gradient_background"
    android:gravity="top">

    <!-- Logo or Title -->
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:contentDescription="@string/app_name"
        android:layout_gravity="center"
        android:src="@drawable/ic_launcher_foreground" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp"
        android:background="@drawable/rounded_edittext">

        <!--   Title    -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reset_pass_title"
            android:textColor="#000000"
            android:textSize="34sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"/>

        <!-- OTP Label -->
        <TextView
            android:id="@+id/otpLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/enter_otp"
            android:textColor="#3B3B3B"
            android:textSize="18sp"
            android:layout_marginBottom="6dp"
            android:visibility="visible"/>

        <!-- OTP boxes: six single-character EditTexts -->
        <LinearLayout
            android:id="@+id/otpBoxesContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <EditText
                android:id="@+id/otpBox1"
                android:layout_width="48dp"
                android:layout_height="50dp"
                android:layout_marginEnd="6dp"
                android:background="@drawable/rounded_edittext"
                android:gravity="center"
                android:inputType="number"
                android:autofillHints="oneTimeCode"
                android:hint="@string/hint_otp"
                android:maxLength="1"
                android:textSize="20sp"
                android:textColor="#333333"/>

            <EditText
                android:id="@+id/otpBox2"
                android:layout_width="48dp"
                android:layout_height="50dp"
                android:layout_marginEnd="6dp"
                android:background="@drawable/rounded_edittext"
                android:gravity="center"
                android:inputType="number"
                android:autofillHints="oneTimeCode"
                android:hint="@string/hint_otp"
                android:maxLength="1"
                android:textSize="20sp"
                android:textColor="#333333" />

            <EditText
                android:id="@+id/otpBox3"
                android:layout_width="48dp"
                android:layout_height="50dp"
                android:layout_marginEnd="6dp"
                android:background="@drawable/rounded_edittext"
                android:gravity="center"
                android:inputType="number"
                android:autofillHints="oneTimeCode"
                android:hint="@string/hint_otp"
                android:maxLength="1"
                android:textSize="20sp"
                android:textColor="#333333" />

            <EditText
                android:id="@+id/otpBox4"
                android:layout_width="48dp"
                android:layout_height="50dp"
                android:layout_marginEnd="6dp"
                android:background="@drawable/rounded_edittext"
                android:gravity="center"
                android:inputType="number"
                android:autofillHints="oneTimeCode"
                android:hint="@string/hint_otp"
                android:maxLength="1"
                android:textSize="20sp"
                android:textColor="#333333" />

            <EditText
                android:id="@+id/otpBox5"
                android:layout_width="48dp"
                android:layout_height="50dp"
                android:layout_marginEnd="6dp"
                android:background="@drawable/rounded_edittext"
                android:gravity="center"
                android:inputType="number"
                android:autofillHints="oneTimeCode"
                android:hint="@string/hint_otp"
                android:maxLength="1"
                android:textSize="20sp"
                android:textColor="#333333" />

            <EditText
                android:id="@+id/otpBox6"
                android:layout_width="48dp"
                android:layout_height="50dp"
                android:background="@drawable/rounded_edittext"
                android:gravity="center"
                android:inputType="number"
                android:autofillHints="oneTimeCode"
                android:hint="@string/hint_otp"
                android:maxLength="1"
                android:textSize="20sp"
                android:textColor="#333333" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp">

            <!-- OTP countdown timer (1:00) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/otp_expiry"
                android:textColor="#1F1F1F"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:layout_marginEnd="4dp"/>

            <!-- OTP countdown timer (1:00) -->
            <TextView
                android:id="@+id/otpTimerText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/otp_timer_initial"
                android:textColor="#1F1F1F"
                android:textSize="14sp"
                android:layout_gravity="center" />

        </LinearLayout>

        <!-- Verify OTP Button -->
        <Button
            android:id="@+id/verifyOtpBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/verify_otp"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#1D61E7"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif-medium"
            android:visibility="visible"/>

        <!-- Reset form: hidden until OTP is verified -->
        <LinearLayout
            android:id="@+id/resetFormContainer"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="24dp">

            <!-- Password Label -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_pass"
                android:textColor="#3B3B3B"
                android:textSize="18sp"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="16dp"/>

            <!-- Password Field -->
            <EditText
                android:id="@+id/newPasswordInput"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="@string/hint_pass"
                android:autofillHints="*****"
                android:inputType="textPassword"
                android:background="@drawable/rounded_edittext"
                android:paddingHorizontal="16dp"
                android:textColor="#333333"
                android:textColorHint="#9E9E9E" />

            <!-- Confirm Password Label -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_confirm_pass"
                android:textColor="#3B3B3B"
                android:textSize="18sp"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="16dp"/>

            <!-- Confirm Password Field -->
            <EditText
                android:id="@+id/confirmNewPasswordInput"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="@string/hint_pass_again"
                android:autofillHints="*****"
                android:inputType="textPassword"
                android:background="@drawable/rounded_edittext"
                android:paddingHorizontal="16dp"
                android:textColor="#333333"
                android:textColorHint="#9E9E9E" />

            <Button
                android:id="@+id/resetBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/reset_pass_title"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:backgroundTint="#1D61E7"
                android:layout_marginTop="24dp"
                android:fontFamily="sans-serif-medium"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
